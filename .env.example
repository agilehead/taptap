# TapTap Environment Configuration
# Copy to .env and update with your values
#
# IMPORTANT: All required variables must be set. No defaults are used.

# =============================================================================
# Server Configuration (REQUIRED)
# =============================================================================
TAPTAP_SERVER_HOST=127.0.0.1
TAPTAP_SERVER_PORT=5006
TAPTAP_PUBLIC_URL=http://localhost:5006

# =============================================================================
# Database Configuration (REQUIRED)
# =============================================================================
# Directory for SQLite database (taptap.db will be created here)
TAPTAP_DATA_DIR=./data

# =============================================================================
# Cron Secret (REQUIRED)
# =============================================================================
# Secret for authenticating internal cron endpoints (e.g., /internal/cron/process-queue)
CRON_SECRET=change-me-to-a-random-secret

# =============================================================================
# CORS Configuration (REQUIRED)
# =============================================================================
# Comma-separated list of allowed origins
TAPTAP_CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# =============================================================================
# Email Provider Configuration
# =============================================================================
# Provider: "console" (logs to stdout) or "smtp" (sends real emails)
EMAIL_PROVIDER=console

# From address for outgoing emails
EMAIL_FROM_ADDRESS=noreply@lesser.app
EMAIL_FROM_NAME=Lesser

# SMTP settings (required when EMAIL_PROVIDER=smtp)
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_SECURE=false
# SMTP_USER=
# SMTP_PASSWORD=

# =============================================================================
# Queue Configuration (optional, defaults shown)
# =============================================================================
# QUEUE_BATCH_SIZE=10
# QUEUE_MAX_ATTEMPTS=3

# =============================================================================
# Logging (optional)
# =============================================================================
LOG_LEVEL=info
# TAPTAP_LOG_FILE_DIR=./data/logs
