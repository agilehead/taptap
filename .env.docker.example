# TapTap Docker Environment Configuration
# Copy to .env.docker and update with your values

# =============================================================================
# Server Configuration (REQUIRED)
# =============================================================================
TAPTAP_SERVER_HOST=0.0.0.0
TAPTAP_SERVER_PORT=5006

# =============================================================================
# Database Configuration (REQUIRED)
# =============================================================================
TAPTAP_DATA_DIR=/app/data

# =============================================================================
# Cron Secret (REQUIRED)
# =============================================================================
TAPTAP_CRON_SECRET=

# =============================================================================
# CORS Configuration (REQUIRED)
# =============================================================================
TAPTAP_CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# =============================================================================
# Email Provider Configuration (REQUIRED)
# =============================================================================
TAPTAP_EMAIL_PROVIDER=console
TAPTAP_EMAIL_FROM_ADDRESS=noreply@example.com
TAPTAP_EMAIL_FROM_NAME=My App

# SMTP settings (required when TAPTAP_EMAIL_PROVIDER=smtp)
# TAPTAP_SMTP_HOST=smtp.example.com
# TAPTAP_SMTP_PORT=587
# TAPTAP_SMTP_SECURE=false
# TAPTAP_SMTP_USER=
# TAPTAP_SMTP_PASSWORD=

# =============================================================================
# Queue Configuration (optional)
# =============================================================================
# TAPTAP_QUEUE_BATCH_SIZE=10
# TAPTAP_QUEUE_MAX_ATTEMPTS=3

# =============================================================================
# Logging
# =============================================================================
LOG_LEVEL=info
TAPTAP_LOG_FILE_DIR=/app/data/logs
